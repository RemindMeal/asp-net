@page
@model RemindMeal.Pages.Friends.EditModel

@{
    ViewData["Title"] = "Modifier";
}

<h4>Modification d'un ami</h4>

<hr/>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Friend.Id"/>
            <div class="form-group">
                <label asp-for="Friend.Name" class="control-label"></label>
                <input asp-for="Friend.Name" class="form-control"/>
                <span asp-validation-for="Friend.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Friend.Surname" class="control-label"></label>
                <input asp-for="Friend.Surname" class="form-control"/>
                <span asp-validation-for="Friend.Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a asp-page="./Index" class="btn btn-secondary">
                                    <i class="fa fa-arrow-left"></i>
                                    Retour Ã  la liste
                                </a>
                <input type="submit" value="Enregistrer" class="btn btn-success"/>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}