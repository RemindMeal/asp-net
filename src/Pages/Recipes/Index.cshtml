@page
@using RemindMeal.Structures
@model RemindMeal.Pages.Recipes.IndexModel

@{
    ViewData["Title"] = "Recettes";
}

<h1>Toutes vos recettes</h1>

<p>
    <a asp-page="Create" class="btn btn-success">Créer une nouvelle recette</a>
</p>

<p>
    <form>
        <div class="form-row col-xl-6 col-lg-6 col-md-8 col-sm-12">
            <div class="input-group">
                <input type="text" class="form-control" asp-for="SearchString"/>
                <div class="input-group-append">
                    <button type="submit" class="btn btn-primary">Rechercher</button>
                </div>
            </div>
        </div>
    </form>
</p>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                <a asp-page="./Index" asp-route-nameSortOrder="@Model.NameSortLink">
                    @Html.DisplayNameFor(model => model.Recipes[0].Name)
                </a>
                @if (Model.NameSort == SortOrder.Ascending)
                {
                    <i class="fa fa-angle-down"></i>
                }
                else
                {
                    <i class="fa fa-angle-up"></i>
                }
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Recipes[0].Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Recipes[0].Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Recipes) {
        <tr>
            <td>
                @Html.DisplayFor(_ => item.Name)
            </td>
            <td>
                @Html.DisplayFor(_ => item.Type)
            </td>
            <td>
                @Html.DisplayFor(_ => item.Description)
            </td>
            <td>
                <div class="btn-group" role="group">
                    <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-primary">Détails</a>
                    <a asp-page="./Edit"    asp-route-id="@item.Id" class="btn btn-success">Modifier</a>
                    <a asp-page="./Delete"  asp-route-id="@item.Id" class="btn btn-danger">Supprimer</a>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
