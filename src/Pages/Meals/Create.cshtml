@page
@model RemindMeal.Pages.Meals.CreateModel

@{
    ViewData["Title"] = "Création d'un repas";
}

<h1>Enregistrer un repas</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MealView.Date" class="control-label"></label>
                <input asp-for="MealView.Date" class="form-control" />
                <span asp-validation-for="MealView.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MealView.SelectedFriendIds" class="control-label">Invités</label>
                <select
                    asp-for="MealView.SelectedFriendIds"
                    asp-items="Model.MealView.AvailableFriends"
                    class="form-control selectpicker"
                    data-live-search="true"
                    data-none-selected-text="Aucun invité sélectionné">
                </select>
            </div>
            <div class="form-group">
                <label asp-for="MealView.SelectedRecipeIds" class="control-label">Menu</label>
                <select
                    id="recipesPicker"
                    asp-for="MealView.SelectedRecipeIdsAndOrders"
                    asp-items="Model.MealView.AvailableRecipes"
                    class="form-control selectpicker"
                    data-live-search="true"
                    data-none-selected-text="Aucune recette sélectionnée">
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Créer" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Retour à la liste</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
    let myChoices = [];
    $('#recipesPicker').on('changed.bs.select', function(e, clickedIndex, isSelected, previousValue) {
      let recipesPicker = document.getElementById("recipesPicker"); 
      let selected = recipesPicker.options[clickedIndex].value;
      console.log("clickedIndex is " + clickedIndex);
      console.log("selected is " + selected)
      if (myChoices.indexOf(selected) === -1) {
        myChoices.push(selected);
      } else {
        myChoices.splice(myChoices.indexOf(selected), 1);
      }
      console.log(myChoices);
      recipesPicker.options[clickedIndex].value = (selected, 3)
    });
    </script> 
}
