@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Données personnelles";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h4>@ViewData["Title"]</h4>

<div class="row">
    <div class="col-md-6">
        <p>
            Votre compte contient des données personnelles que vous nous avez fournies. Sur cette page, vous pouvez
            téléchargez ou supprimez ces données.
        </p>
        <p>
            <strong>
                La suppression de ces données est irréversible et engendrera la fermeture définitive de votre compte.
            </strong>
        </p>
        <div class="row">
            <form id="download-data" asp-page="DownloadPersonalData" method="post" class="form-group mr-1">
                <button class="btn btn-primary" type="submit"><span class="octicon octicon-mark-github"></span>Télécharger</button>
            </form>
            <p class="form-group">
                <a id="delete" asp-page="DeletePersonalData" class="btn btn-danger">Supprimer</a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}