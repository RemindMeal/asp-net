@page
@model RemindMeal.Pages.Friends.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h3>Êtes-vous sûr de vouloir supprimer cet invité ?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Friend.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Friend.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Friend.Surname)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Friend.Surname)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Friend.Id" />
        <input type="submit" value="Supprimer" class="btn btn-danger" /> |
        <a asp-page="./Index" class="btn btn-primary">Retour à la liste</a>
    </form>
</div>
