@page
@model RemindMeal.Pages.Meals.DeleteModel

@{
    ViewData["Title"] = "Suppression d'un repas";
}

<h3>Êtes-vous sûr de vouloir supprimer le repas du @Model.Meal.Date.ToString("dd/MM/yyyy") ?</h3>
<div>
    <form method="post">
        <input type="hidden" asp-for="Meal.Id"/>
        <input type="submit" value="Supprimer" class="btn btn-danger"/> |
        <a asp-page="./Index">Retour à vos repas</a>
    </form> 
</div>
