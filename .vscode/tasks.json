{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "clear": true
    },
    "tasks": [
        {
            "label": ".NET CLI run",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "run",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary",
                "--project",
                "RemindMeal.App"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "test",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "test"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "PostgreSQL Docker",
            "command": "docker",
            "args": [
                "run",
                "--rm",
                "--name",
                "remindmeal",
                "--env-file",
                ".env",
                "-p",
                "5432:5432",
                "-d",
                "postgres:13"
            ],
            "problemMatcher": []
        }
    ]
}