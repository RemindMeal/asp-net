{
    "version": "2.0.0",
    "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "clear": true
    },
    "problemMatcher": "$msCompile",
    "tasks": [
        {
            "label": "Run RemindMeal",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "run",
                "--project",
                "RemindMeal.App"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "test",
            "command": "dotnet",
            "args": [
                "test"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "Build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/RemindMeal.sln",
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "focus": true,
            }
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/RemindMeal.sln",
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "type": "process",
            "command": "dotnet",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/RemindMeal.sln"
            ],
        }
    ]
}